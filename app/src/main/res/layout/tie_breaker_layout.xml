<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tie_breaker_layout"
    android:layout_width="460dp"
    android:layout_height="100dp"
    android:rowCount="2"
    android:columnCount="2"
    android:gravity="center">

    <TextView
        android:id="@+id/left_name"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/right_name"
        android:layout_marginLeft="40dp"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/left_spinner"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:dropDownWidth="85dp"
        android:entries="@array/tie_break"
        android:spinnerMode="dropdown"
        android:theme="@style/Widget.AppCompat.DropDownItem.Spinner" />

    <Spinner
        android:id="@+id/right_spinner"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:dropDownWidth="85dp"
        android:entries="@array/tie_break"
        android:spinnerMode="dropdown"
        android:theme="@style/Widget.AppCompat.DropDownItem.Spinner" />
</GridLayout>