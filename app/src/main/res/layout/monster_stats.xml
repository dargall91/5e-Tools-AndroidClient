            android:id="@+id/wis_mod"/>

        <CheckBox
            android:id="@+id/wis_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving Throws"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/animal_exp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/animal_prof"
                android:text="Animal Handling"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/insight_exp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/insight_prof"
                android:text="Insight"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/medicine_exp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/medicine_prof"
                android:text="Medicine"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/perception_exp"/>

            <CheckBox
                android:layout_width="wrap_content"
