<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/monster_stats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:columnCount="6"
    android:rowCount="1">

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="STR"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/strength"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:dropDownWidth="160dp"
            android:spinnerMode="dropdown"
            android:entries="@array/ability_scores"
            android:theme="@style/Widget.AppCompat.DropDownItem.Spinner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/str_mod"/>

        <CheckBox
            android:id="@+id/str_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving Throws"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/athletics_exp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/athletics_prof"
                android:text="Athletics"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="DEX"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/dexterity"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:dropDownWidth="160dp"
            android:spinnerMode="dropdown"
            android:entries="@array/ability_scores"
            android:theme="@style/Widget.AppCompat.DropDownItem.Spinner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dex_mod"/>

        <CheckBox
            android:id="@+id/dex_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving Throws"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/acrobatics_exp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/acrobatics_prof"
                android:text="Acrobatics"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/sleight_exp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sleight_prof"
                android:text="Sleight of Hand"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <CheckBox
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/stealth_exp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stealth_prof"
                android:text="Stealth"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="CON"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/constitution"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:dropDownWidth="160dp"
            android:spinnerMode="dropdown"
            android:entries="@array/ability_scores"
            android:theme="@style/Widget.AppCompat.DropDownItem.Spinner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/con_mod"/>

        <CheckBox
            android:id="@+id/con_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saving Throws"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="INT"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/intelligence"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:dropDownWidth="160dp"
            android:spinnerMode="dropdown"
            android:entries="@array/ability_scores"
            android:theme="@style/Widget.AppCompat.DropDownItem.Spinner"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
