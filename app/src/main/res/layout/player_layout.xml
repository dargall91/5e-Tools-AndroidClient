<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/player_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <CheckBox
        android:id="@+id/combatant_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/player_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/ac_spinner"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:dropDownWidth="85dp"
        android:entries="@array/ac_list"
        android:spinnerMode="dropdown"
        android:theme="@style/Widget.AppCompat.DropDownItem.Spinner"/>

    <Spinner
        android:id="@+id/bonus_spinner"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:dropDownWidth="85dp"
        android:entries="@array/initiatives"
        android:spinnerMode="dropdown"
        android:theme="@style/Widget.AppCompat.DropDownItem.Spinner"/>

    <Spinner
        android:id="@+id/init_roll_spinner"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:dropDownWidth="85dp"
        android:entries="@array/d20_roll"
        android:spinnerMode="dropdown"
        android:theme="@style/Widget.AppCompat.DropDownItem.Spinner"/>

    <Button
        android:id="@+id/delete_player"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:text="Delete"
        android:textSize="14sp"/>

</LinearLayout>